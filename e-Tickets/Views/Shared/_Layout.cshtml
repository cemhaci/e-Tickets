<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - e_Tickets</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   @* <link rel="stylesheet" href="~/e_Tickets.styles.css" asp-append-version="true" />*@
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar navbar-light" style="background-color: #e3f2fd; z-index: 99999; max-height:56px;">
            
            <div class="container-fluid">
                <button class="navbar-toggler"
                        type="button"
                        data-mdb-toggle="collapse"
                        data-mdb-target="#navbarTogglerDemo03"
                        aria-controls="navbarTogglerDemo03"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <a class="navbar-brand" href="#">Navbar</a>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo03"
">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled"></a>
                        </li>
                        @if(User.IsInRole("admin")){
   <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            MANAGEMENT
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/Cinema/Index">Cinemas</a></li>
            <li><a class="dropdown-item" asp-controller="Producer" asp-action="Index" >Producers</a></li>
            <li><a class="dropdown-item" href="/Actor/Actor">Actors</a></li>
          </ul>
        </li>
                        }
                    
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                      <div class="nav-item text-end mx-3" style="float:right;">
						<a class="nav-link"><i class="fa-solid fa-right-to-bracket me-1"></i>@User.FindFirst("UserName").Value</a>
					</div>
                    <div class="nav-item text-end mx-3" style="float:right;">
                            <a class="nav-link" asp-action="Logout" asp-controller="Login"><i class="fa-solid fa-user me-1"></i>Logout</a>
                        </div>
                    }
                    else
                    {
                                 <div class="nav-item text-end mx-3" style="float:right;">
                        <a class="nav-link" href="Login/Index" asp-action="Index" asp-controller="Login"><i class="fa-solid fa-right-to-bracket me-1"></i>Login</a>
					</div>
                    <div class="nav-item text-end mx-3" style="float:right;">
                        <a class="nav-link" href="Register/Index" asp-action="Index" asp-controller="Register"><i class="fa-solid fa-user me-1"></i>Register</a>
                        </div>
                    
}

                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="position:absolute; bottom: 0; width: 100%; height: 0px;">
        <div class="container">
            &copy; 2023 - e_Tickets - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
