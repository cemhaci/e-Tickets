@model List<Movie>
@{
	ViewData["Title"] = "Home Page";
}
<div class="row mt-4" style=" float: right; margin-right:10px;">
	<form class="d-flex input-group w-auto" asp-controller="Home" asp-action="Index" method="post">
		<input type="text" style="max-height:37.6px;"
			   class="form-control"
			   placeholder="Type query"
			   aria-label="Search" name="search" />
		<button class="btn btn-outline-primary" style="max-width:72.63px;"
				type="submit"
				data-mdb-ripple-color="dark">
			Search
		</button>
		
	</form>


</div>
<br />
<br />
<br />

	<div class="row mt-4">
	
		
		@foreach (var item in Model)
		{
			<div class="col-md-4 col xs-6 border-primary mb-3 d-block" style="max-width:400px; max-height:400px; margin:20px;">
				<div class="card mb-3" sytle="width:540px;">
					<div class="row g-0">
						<div class="col-md-12">
							<div class="card-header text-white bg-black" style="max-height:70px;">
								<p class="card-text">
									<h5 class="card-title" style="font-size:inherit;">
										@item.Name
										<a class="text-white float-end"><i class="fa fa-pencil-square"></i></a>
									</h5>
								</p>
							</div>
						</div>
						<div class="col-md-6" class="max-height:100px;max-width:400px;">
							<img src="@item.imageUrl" width="100%" alt="">
						</div>
						<div class="col-md-6" style="word-wrap:break-word;">
							<div class="card-body" style="word-wrap:anywhere; max-height:288px;">
								<p class="card-text">@item.Description</p>
								<p class="card-text"><b>Cinema: </b> @item.Cinema.Name</p>
								<p class="card-text" style="max-height:24px; font-stretch:wider"><b>Category: </b> @item.MovieCategory</p>
								<p class="card-text"><b>Start Date: </b> @item.StartDate</p>
								<p class="card-text"><b>End Date: </b> @item.EndDate</p>
							</div>
						</div>
						<div class="col-md-12">
							<div class="card-footer">
								<p class="card-text">
									<a class="btn btn-outline-primary float-end"><i class="fa fa-eye-dropper"></i>Show Details</a>
									<a class="btn btn-success text-white"><i class="fa fa-card"></i>Add to Cart ($@item.Price)</a>
								<a href=""></a>
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		}

	</div>




