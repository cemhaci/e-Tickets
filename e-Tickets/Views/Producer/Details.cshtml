@model Producer


<div class="row text">
    <div class="col-md-8 offset-2 container-fluid bg-dark text-light p-5 mt-5">
        <p>
            <h1>Details for @Model.FullName</h1>
        </p>
    </div>

    <div class="row">

        <div class="col-md-3 offset-2">

            <div asp-validation-summary="None" class="text-danger">
            </div>

            <br />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" style="max-width:300px;">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Bio" class="control-label"></label>
                <textarea asp-for="Bio" class="form-control" aria-label="Bio" style="max-width:300px;"></textarea>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ProfilePictureUrl" class="control-label"></label>
                <input asp-for="ProfilePictureUrl" type="text" style="max-width:300px;" class="form-control" name="profileImage" id="profileImg">
                <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
            </div>

            <br />
            <hr />
            <div class="input-group">
                <a href="Producer/Index" class="btn btn-outline-secondary" style="border-radius:5px;">Show All</a>
                <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-outline-secondary" style="border-radius:5px;" style="position:relative; left:250px; border-radius:5px;">Edit</a>


            </div>


        </div>

        <div class="col-md-6 align-content-center my-5">
            <img class="rounded-circle" style="max-height:250px; max-width:250px;" alt="pic" id="profileview" />
        </div>



    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('profileview');
            output.src = $("#profileImg").val();
        })

        $("#profileImg").on("change", function () {
            var output = document.getElementById('profileview');
            output.src = $(this).val();
        })
    </script>
}
